package com.elenilson.cursojavaintermediario.aula71;

public class Calculadora {
	
	private int soma;
	
	public int somaArray(int[] array) {
		
		soma = 0;
		
		for(int i = 0; i < array.length; i++) {
			
			soma += array[i];
			
			try {
				Thread.sleep(100);
			} catch (InterruptedException e) {
				// TODO Auto-generated catch block
				e.printStackTrace();
			}
		}
		
		return soma;
	}

}
